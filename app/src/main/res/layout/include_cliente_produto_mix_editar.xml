<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/llyTitulo"
        android:background="@color/colorTitleBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:text="INFORMAR ESTOQUE"
            android:padding="7dp"
            android:textColor="@color/colorTitleForeground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ScrollView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- Código & Ean13 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Código -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="CÓDIGO"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtProdutoCodigo"
                        android:text="0000001"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- Ean13 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="EAN13"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtProdutoEan13"
                        android:text="7891245637444"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>


            <!-- Produto -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Produto -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="PRODUTO"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/txtProdutoDescricao"
                            android:text="ABRACADEIRA DE ALUMINIOS 3MMX4MM"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Data da última compra & Maior Compra -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Data da última compra -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ÚLTIMA COMPRA"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtUltimaCompraData"
                        android:text="01/02/2017"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- Maior compra em quantidade -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="MAIOR COMPRA"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompraQuantidadeMaior"
                        android:text="30 UN"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical|right"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>


            <!-- Quantidade em estoque -->
            <LinearLayout
                android:id="@+id/pnlEstoqueQuantidadeAll"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Quantidad em estoque -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="QUANTIDADE EM ESTOQUE"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/pnlEstoqueQuantidade"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:src="@drawable/img_pencil"
                            android:layout_marginTop="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/txtEstoqueQuantidade"
                            android:text="15 UN"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Quantidade a comprar -->
            <LinearLayout
                android:id="@+id/pnlComprarQuantidadeAll"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Quantidad a comprar -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="QUANTIDADE A COMPRAR"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/pnlComprarQuantidade"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:src="@drawable/img_pencil"
                            android:layout_marginTop="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/txtComprarQuantidade"
                            android:text="5 UN"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Valor unitário & Valor total -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Valor unitário -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="VALOR UNITÁRIO"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtUnidadeValor"
                        android:text="R$ 0,00"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|right"
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- Valor total -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="VALOR TOTAL"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtTotalValor"
                        android:text="R$ 0,00"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical|right"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- Cancelar | Ok -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelar"
            android:text="CANCELAR"
            android:background="@color/grey_300"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnOk"
            android:text="OK"
            android:textColor="#FFFFFF"
            android:background="@color/indigo_400"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>