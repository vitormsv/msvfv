<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Código & Ean13 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/list_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProdutoCodigo"
            android:text="0000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProdutoEan13"
            android:text="1234567890123"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Descrição do produto -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProdutoDescricao"
            android:text="COLA CASCORES MADEIRA 500ML"
            android:textColor="@color/indigo_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Grupo do produto -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtGrupoDescricao"
            android:text="COLAS E ADESIVOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Unidade de medida -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProdutoUnidadeMedida"
            android:text="PEÇA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Informações de compra -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/grey_100"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Indicador de digitação -->
            <LinearLayout
                android:id="@+id/pnlCol1"
                android:orientation="horizontal"
                android:background="@color/pink_500"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"></LinearLayout>


            <!-- Data da última compra -->
            <TextView
                android:text="Última Compra"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtUltimaCompraData"
                android:text="05/01/2017"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Preço pago -->
            <TextView
                android:text="Preço pago"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtUltimaCompraValor"
                android:text="12 un"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Preço atual -->
            <TextView
                android:text="Preço atual"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPreco"
                android:text="12 un"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Indicador de digitação -->
            <LinearLayout
                android:id="@+id/pnlCol2"
                android:orientation="horizontal"
                android:background="@color/pink_500"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"></LinearLayout>


            <!-- Maior compra em quantidade -->
            <TextView
                android:text="Maior Compra"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCompraQuantidadeMaior"
                android:text="40 un"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Quantidade atual em estoque -->
            <TextView
                android:text="Qtd Estoque"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEstoqueQuantidade"
                android:text="12 un"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Quantidade que o cliente deseja comprar -->
            <TextView
                android:text="Qtd Comprar"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtComprarQuantidade"
                android:text="28 un"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>