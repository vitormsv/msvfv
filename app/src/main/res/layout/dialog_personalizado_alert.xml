<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Titulo da janela -->
    <TextView
        android:id="@+id/txtDialogTitle"
        android:text="ATENÇÃO"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Painel referente a mensagem -->
    <LinearLayout
        android:id="@+id/llyDialogMessage"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvDialogMessage"
            android:src="@drawable/img_alert"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/txtDialogMessage"
            android:text="Tem certeza que deseja carregar o mix de produtos do cliente neste pedido ?"
            android:textColor="@color/indigo_500"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Painel referente a explicação -->
    <LinearLayout
        android:id="@+id/llyDialogComplement"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/txtDialogComplement"
            android:text="OBS: os itens já adicionados no pedido serão removidos para dar lugar aos produtos que compõe o mix do cliente"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>