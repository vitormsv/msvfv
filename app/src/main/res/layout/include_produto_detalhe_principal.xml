<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:id="@+id/ivProduto"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Painel de informações principais do produto -->
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Codigo -->
            <TextView
                android:text="Código"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCodigo"
                android:text="000001"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Codigo de Barras -->
            <TextView
                android:text="Código de Barras"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEan13"
                android:text="1122334567817"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Descrição -->
            <TextView
                android:text="Descrição"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDescricao"
                android:text="DESCRIÇÃO DO PRODUTO"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Linha -->
            <TextView
                android:text="Linha"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtLinhaDescricao"
                android:text="DESCRIÇÃO DA LINHA DO PRODUTO"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Grupo -->
            <TextView
                android:text="Grupo"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtGrupoDescricao"
                android:text="DESCRIÇÃO DO GRUPO DO PRODUTO"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Unidade de Medida -->
            <TextView
                android:text="Unidade de Medida"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtUnidadeMedida"
                android:text="CAIXA"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Quantidade por Embalagem -->
            <TextView
                android:text="Quantidade por Embalagem"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEmbalagemQuantidade"
                android:text="1"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Peso Bruto -->
            <TextView
                android:text="Peso Bruto"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPesoBruto"
                android:text="1,2 kg"
                android:textColor="@color/indigo_500"
                android:background="#FFF"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>