<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Titulo da janela de dialogo -->
    <TextView
        android:text="RESUMO DE COMPRA"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Itens -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtQuantidade"
                android:text="12"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="itens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Separador -->
        <LinearLayout
            android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>


        <!-- Valor Total -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtValorTotal"
                android:text="R$ 1.189,52"
                android:textSize="35dp"
                android:textColor="@color/green_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="valor total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Separador -->
        <LinearLayout
            android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>


        <!-- Itens Ofertados -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Grafico de quantidade ofertada -->
            <LinearLayout
                android:id="@+id/llyQuantidadeTotal"
                android:background="@color/pink_100"
                android:layout_width="300dp"
                android:layout_height="35dp">

                <LinearLayout
                    android:id="@+id/llyQuantidadeOfertada"
                    android:orientation="horizontal"
                    android:background="@color/pink_500"
                    android:layout_width="150dp"
                    android:layout_height="35dp">
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtQuantidadeOfertada"
                android:text="12 de 40"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="produtos ofertados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>