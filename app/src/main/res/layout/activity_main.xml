<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.microserv.msvmobilepdv.MainActivity">

    <!-- Dados do vendedor -->
    <LinearLayout
        style="@style/panelIdentityBar"
        android:id="@+id/pnlVendedor"
        android:orientation="vertical"
        android:background="@color/indigo_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/textIdentityBarAll"
            android:id="@+id/txtVendedor"
            android:textStyle="bold"
            android:text="000187 - RAZAO SOCIAL DO CLIENTE" />

        <TextView
            style="@style/textIdentityBarAll"
            android:id="@+id/txtVendedorRegiao"
            android:text="02.345.678/0001-90" />

    </LinearLayout>


    <!-- Título -->
    <LinearLayout
        style="@style/panelTitle">

        <TextView
            style="@style/textTitleAll"
            android:text="MENU PRINCIPAL" />

    </LinearLayout>


    <!-- Menus em forma de botão -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <!-- Clientes | Pedidos -->
            <LinearLayout
                style="@style/panelMenuRow"
                android:id="@+id/pnlRow1">

                <!-- Clientes -->
                <LinearLayout
                    style="@style/panelMenuCell"
                    android:id="@+id/pnlCliente">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contacts" />

                    <TextView
                        style="@style/textMenu"
                        android:text="CLIENTES" />

                </LinearLayout>

                <!-- Pedido -->
                <LinearLayout
                    style="@style/panelMenuCell"
                    android:id="@+id/pnlPedido">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clipboard" />

                    <TextView
                        style="@style/textMenu"
                        android:text="PEDIDOS" />

                </LinearLayout>

            </LinearLayout>


            <!-- Produtos | Sincronizar -->
            <LinearLayout
                style="@style/panelMenuRow"
                android:id="@+id/pnlRow2">

                <!-- Produto -->
                <LinearLayout
                    style="@style/panelMenuCell"
                    android:id="@+id/pnlProduto">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cart" />

                    <TextView
                        style="@style/textMenu"
                        android:text="PRODUTOS" />

                </LinearLayout>

                <!-- Sincronizar -->
                <LinearLayout
                    style="@style/panelMenuCell"
                    android:id="@+id/pnlSincronizarDados">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download" />

                    <TextView
                        style="@style/textMenu"
                        android:text="SYNC APP" />

                </LinearLayout>

            </LinearLayout>


