        style="@style/panelTitle"
        android:id="@+id/llyRodape">

        <TextView
            style="@style/textTitleAll"
            android:id="@+id/txtUltimaSincronizacao"
            android:text="SINCRONIZADO EM: 01/01/2019 08:00"/>

