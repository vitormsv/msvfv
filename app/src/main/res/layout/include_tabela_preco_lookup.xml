<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tabela de Preco -->
    <LinearLayout
        android:id="@+id/pnlTabelaPrecoContent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTabelaPrecoTitle"
            android:text="TABELA DE PREÃ‡O"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/pnlTabelaPreco"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTabelaPreco"
                android:src="@drawable/search_icon"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/txtTabelaPreco"
                android:text="TABELA SP"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnlTabelaPrecoObr"
            android:orientation="horizontal"
            android:background="@color/orange_500"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>